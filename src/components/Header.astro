<header transition:name="header" class="flex w-full justify-center border-b-2 border-black z-50 bg-skin-fill">
  <div class="flex w-full max-w-[48rem] justify-between gap-2 px-4 py-2">
    <a
      id="skip-to-content"
      class="absolute -top-full left-16 z-50 bg-skin-accent px-3 py-2 text-skin-inverted transition-all focus:top-4"
      href="#main-content">Skip to content</a
    >
    <a
      href="/"
      class="translate-y-1.5 text-nowrap py-1 font-mono text-xl font-normal text-skin-base sm:translate-y-1 sm:text-2xl"
    >
      The <bold class="font-bold">Cached </bold> Exception
    </a>
    <details
      id="menu-items"
      class="relative [&:not([open])_line.x]:hidden [&[open]_line.l]:hidden h-fit top-0 bottom-0 my-auto"
    >
      <summary
        class="w-fit cursor-pointer list-none p-2 marker:hidden hover:scale-110"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="h-6 w-6 fill-skin-base transition-all duration-200 hover:w-8"
        >
          <line class="l stroke-2" x1="5" y1="8" x2="19" y2="8"></line>
          <line class="l stroke-2" x1="10" y1="16" x2="19" y2="16"></line>
          <line class="x stroke-2" x1="18" y1="6" x2="6" y2="18"></line>
          <line class="x stroke-2" x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </summary>
      <div
        class="absolute max-w-[calc(100vw-3.5rem)] right-6 z-10 flex w-80 translate-y-4 flex-col rounded-md border-2 border-skin-base bg-skin-fill font-mono text-skin-base"
      >
        <header class="flex w-full justify-between p-4">
          <a
            href="/search"
            class="group inline-block hover:text-skin-accent"
            aria-label="Search posts"
            title="Search posts"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="hover:scale-125 sm:w-8"
              ><path
                d="M19.023 16.977a35.13 35.13 0 0 1-1.367-1.384c-.372-.378-.596-.653-.596-.653l-2.8-1.337A6.962 6.962 0 0 0 16 9c0-3.859-3.14-7-7-7S2 5.141 2 9s3.14 7 7 7c1.763 0 3.37-.66 4.603-1.739l1.337 2.8s.275.224.653.596c.387.363.896.854 1.384 1.367l1.358 1.392.604.646 2.121-2.121-.646-.604c-.379-.372-.885-.866-1.391-1.36zM9 14c-2.757 0-5-2.243-5-5s2.243-5 5-5 5 2.243 5 5-2.243 5-5 5z"
              ></path>
            </svg>
          </a>
          <button
            id="theme-btn"
            title="Toggles light & dark"
            aria-label="auto"
            aria-live="polite"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="block dark:hidden hover:scale-125 sm:w-8"
            >
              <path
                d="M20.742 13.045a8.088 8.088 0 0 1-2.077.271c-2.135 0-4.14-.83-5.646-2.336a8.025 8.025 0 0 1-2.064-7.723A1 1 0 0 0 9.73 2.034a10.014 10.014 0 0 0-4.489 2.582c-3.898 3.898-3.898 10.243 0 14.143a9.937 9.937 0 0 0 7.072 2.93 9.93 9.93 0 0 0 7.07-2.929 10.007 10.007 0 0 0 2.583-4.491 1.001 1.001 0 0 0-1.224-1.224zm-2.772 4.301a7.947 7.947 0 0 1-5.656 2.343 7.953 7.953 0 0 1-5.658-2.344c-3.118-3.119-3.118-8.195 0-11.314a7.923 7.923 0 0 1 2.06-1.483 10.027 10.027 0 0 0 2.89 7.848 9.972 9.972 0 0 0 7.848 2.891 8.036 8.036 0 0 1-1.484 2.059z"
              ></path>
            </svg>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="hidden dark:block hover:scale-125 sm:w-8"
            >
              <path
                d="M6.993 12c0 2.761 2.246 5.007 5.007 5.007s5.007-2.246 5.007-5.007S14.761 6.993 12 6.993 6.993 9.239 6.993 12zM12 8.993c1.658 0 3.007 1.349 3.007 3.007S13.658 15.007 12 15.007 8.993 13.658 8.993 12 10.342 8.993 12 8.993zM10.998 19h2v3h-2zm0-17h2v3h-2zm-9 9h3v2h-3zm17 0h3v2h-3zM4.219 18.363l2.12-2.122 1.415 1.414-2.12 2.122zM16.24 6.344l2.122-2.122 1.414 1.414-2.122 2.122zM6.342 7.759 4.22 5.637l1.415-1.414 2.12 2.122zm13.434 10.605-1.414 1.414-2.122-2.122 1.414-1.414z"
              ></path>
            </svg>
          </button>
        </header>
        <hr class="h-0.5 w-full bg-black" />
        <nav class="flex flex-col gap-2 p-3">
          <a
            href="/posts/"
            class="nb-shadow-4 col-span-2 flex w-full items-center justify-center rounded-sm bg-red-200 p-2"
            >Posts</a
          >
          <a
            href="/tags/"
            class="nb-shadow-4 col-span-2 flex w-full items-center justify-center rounded-sm bg-green-200 p-2"
            >Tags</a
          >
          <a
            href="/about/"
            class="nb-shadow-4 col-span-2 flex w-full items-center justify-center rounded-sm bg-purple-200 p-2"
            >About</a
          >
        </nav>
      </div>
    </details>
  </div>
</header>
